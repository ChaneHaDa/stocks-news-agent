# ML Service Configuration Example

# Service settings
ML_HOST=0.0.0.0
ML_PORT=8001
ML_DEBUG=false

# Model settings
ML_MODELS_DIR=/app/models
ML_IMPORTANCE_MODEL=importance.pkl
ML_EMBED_MODEL=sentence-transformers/distiluse-base-multilingual-cased

# Cache settings  
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SUMMARY=604800
CACHE_TTL_IMPORTANCE=300

# LLM API settings (optional)
LLM_API_URL=
LLM_API_KEY=
LLM_TIMEOUT=30
LLM_MAX_RETRIES=3

# Feature flags
ENABLE_IMPORTANCE=true
ENABLE_SUMMARIZE=true
ENABLE_EMBED=true

# Performance settings
MAX_BATCH_SIZE=100
REQUEST_TIMEOUT=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json